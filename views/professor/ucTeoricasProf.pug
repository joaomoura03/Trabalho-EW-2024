doctype html
html
  head
    title Aulas Teóricas da UC #{sigla}
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 80%;
        margin: auto;
        overflow: hidden;
      }
      #main-header {
        background: #333;
        color: #fff;
        padding-top: 30px;
        min-height: 70px;
        border-bottom: #0779e4 3px solid;
      }
      #main-header h1 {
        text-align: center;
        text-transform: uppercase;
        margin: 0;
        font-size: 24px;
      }
      .content {
        background: #fff;
        padding: 20px;
        margin-top: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .section {
        margin-bottom: 20px;
      }
      .section h2 {
        color: #333;
        border-bottom: 2px solid #0779e4;
        padding-bottom: 5px;
        display: flex;
        align-items: center;
      }
      .section h2 button {
        background: #0779e4;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 5px 10px;
        margin-left: 10px;
        cursor: pointer;
      }
      .section h2 button:hover {
        background: #005bb5;
      }
      .section ul {
        list-style: none;
        padding: 0;
      }
      .section li {
        background: #f4f4f4;
        margin: 10px 0;
        padding: 10px;
        border-left: #0779e4 5px solid;
      }
      form {
        display: flex;
        flex-direction: column;
        margin-top: 10px;
      }
      form input,
      form textarea {
        margin: 5px 0;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      form button {
        background: #0779e4;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      form button:hover {
        background: #005bb5;
      }
  body
    header#main-header
      div.container
        h1 Aulas Teóricas da UC #{sigla}
    div.container
      div.content
        .section
          h2
            | Aulas Teóricas
            button(type="button", onclick="document.getElementById('teoricaForm').style.display='block'") Adicionar Teórica
          ul
            each teorica in teoricas
              li
                p Data: #{teorica.data}
                ul
                  each item in teorica.sumario
                    li #{item}
          form#teoricaForm(action=`/ucs/${sigla}/aulas/teoricas`, method="POST", style="display:none")
            input(type="text" name="data" placeholder="Data da Aula Teórica")
            textarea(name="sumario" placeholder="Sumário da Aula Teórica")
            button(type="submit") Salvar Teórica
        a(href=`/ucs/${sigla}`) Voltar
