doctype html
html
  head
    title Lista de Usuários
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 80%;
        margin: auto;
        overflow: hidden;
      }
      #main-header {
        background: #333;
        color: #fff;
        padding-top: 30px;
        min-height: 70px;
        border-bottom: #0779e4 3px solid;
        display: flex;
        align-items: center;
      }
      #main-header h1 {
        flex-grow: 1;
        text-align: center;
        text-transform: uppercase;
        margin: 0;
        font-size: 24px;
      }
      .nav-button-left {
        margin-right: auto;
        padding-left: 20px;
      }
      .nav-button-right {
        margin-left: auto;
        padding-right: 20px;
      }
      .nav-button-left a, .nav-button-right a {
        color: #fff;
        text-decoration: none;
        background: #0779e4;
        padding: 10px 20px;
        border-radius: 5px;
      }
      .nav-button-left a:hover, .nav-button-right a:hover {
        background: #005bb5;
      }
      ul {
        list-style: none;
        padding: 0;
      }
      li {
        background: #fff;
        margin: 10px 0;
        padding: 10px;
        border-left: #0779e4 5px solid;
        position: relative;
      }
      li a {
        text-decoration: none;
        color: #333;
        font-weight: bold;
      }
      li a:hover {
        color: #0779e4;
      }
      li form {
        display: inline;
      }
      .remove-button {
        background: transparent;
        border: none;
        cursor: pointer;
        position: absolute;
        top: 10px;
        right: 10px;
      }
      .remove-button img {
        width: 20px;
        height: 20px;
      }
  body
    header#main-header
      .nav-button-left
        a(href='/ucs') UCs
      h1 Lista de Usuários
      .nav-button-right
        a(href='/') Sair
    div.container
      ul
        each user in users
          li
            a(href=`/users/${user._id}`) #{user.nome}
            form(action=`/users/delete/${user._id}`, method="POST", onsubmit="return confirm('Tem certeza que deseja remover este usuário?');")
              button.remove-button(type="submit")
                img(src="/images/trash-icon.png", alt="Remove")