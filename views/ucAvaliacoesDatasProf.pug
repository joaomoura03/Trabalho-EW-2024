doctype html
html
  head
    title Avaliações e Datas da UC
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 80%;
        margin: auto;
        overflow: hidden;
      }
      #main-header {
        background: #333;
        color: #fff;
        padding-top: 30px;
        min-height: 70px;
        border-bottom: #0779e4 3px solid;
      }
      #main-header h1 {
        text-align: center;
        text-transform: uppercase;
        margin: 0;
        font-size: 24px;
      }
      .content {
        background: #fff;
        padding: 20px;
        margin-top: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .section {
        margin-bottom: 20px;
      }
      .section h2 {
        color: #333;
        border-bottom: 2px solid #0779e4;
        padding-bottom: 5px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .section ul {
        list-style: none;
        padding: 0;
      }
      .section li {
        background: #f4f4f4;
        margin: 10px 0;
        padding: 10px;
        border-left: #0779e4 5px solid;
      }
      .section button {
        background: #0779e4;
        color: #fff;
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      .section button:hover {
        background: #005bb5;
      }
      form {
        display: flex;
        flex-direction: column;
        margin-top: 10px;
      }
      form input,
      form textarea {
        margin: 5px 0;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      form button {
        background: #0779e4;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      form button:hover {
        background: #005bb5;
      }
  body
    header#main-header
      div.container
        h1 Avaliações e Datas da UC #{uc.sigla}
    div.container
      div.content
        .section
          h2
            | Avaliações
            button(type="button", onclick="document.getElementById('avaliacaoForm').style.display='block'") Adicionar Avaliação
          ul
            each avaliacao in uc.avaliacao
              li #{avaliacao}
          form#avaliacaoForm(action=`/ucs/${uc.sigla}/avaliacoes-e-datas`, method="POST", style="display:none")
            input(type="hidden" name="type" value="avaliacao")
            input(type="text" name="class" placeholder="Nova Avaliação")
            button(type="submit") Salvar Avaliação  
        .section
          h2
            | Datas
            button(type="button", onclick="document.getElementById('datasForm').style.display='block'") Editar Datas
          ul
            li Teste: #{uc.datas.teste}
            li Exame: #{uc.datas.exame} 
            li Projeto: #{uc.datas.projeto}
          form#datasForm(action=`/ucs/${uc.sigla}/avaliacoes-e-datas`, method="POST", style="display:none")
            input(type="hidden" name="type" value="teste")
            input(type="text" name="class" placeholder="Teste")
            input(type="text" name="class" placeholder="Exame")
            input(type="text" name="class" placeholder="Projeto")
            button(type="submit") Salvar Datas
        a(href=`/ucs/${uc.sigla}`) Voltar
