doctype html
html
  head
    title Detalhes da UC
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 80%;
        margin: auto;
        overflow: hidden;
      }
      #main-header {
        background: #333;
        color: #fff;
        padding: 10px 20px;
        min-height: 70px;
        border-bottom: #0779e4 3px solid;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      #main-header h1 {
        text-align: center;
        text-transform: uppercase;
        margin: 0;
        font-size: 24px;
      }
      #main-header a {
        color: #fff;
        text-decoration: none;
        background: #0779e4;
        padding: 10px 20px;
        border-radius: 5px;
      }
      #main-header a:hover {
        background: #005bb5;
      }
      .content {
        background: #fff;
        padding: 20px;
        margin-top: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .section {
        margin-bottom: 20px;
      }
      .section h2 {
        color: #333;
        border-bottom: 2px solid #0779e4;
        padding-bottom: 5px;
      }
      .section ul {
        list-style: none;
        padding: 0;
      }
      .section li {
        background: #f4f4f4;
        margin: 10px 0;
        padding: 10px;
        border-left: #0779e4 5px solid;
      }
      .horario-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .horario-header button {
        background: #0779e4;
        color: #fff;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 5px;
        border: none;
        cursor: pointer;
      }
      .horario-header button:hover {
        background: #005bb5;
      }
      form {
        display: flex;
        flex-direction: column;
        margin-top: 10px;
      }
      form input {
        margin: 5px 0;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      form button {
        background: #0779e4;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      form button:hover {
        background: #005bb5;
      }
  body
    header#main-header
      div.container
        h1 Detalhes da UC #{uc.sigla}
        a(href='/') Sair
    div.container
      div.content
        .section
          h2 Título
          p #{uc.titulo}
        .section 
          h2 Docentes
          a(href=`/ucs/${uc.sigla}/docentes`) Docentes
        .section
          h2 Horários
          .horario-header
            h3 Teóricas
            button(type="button", onclick="document.getElementById('teoricasForm').style.display='block'") Adicionar Teórica
          ul
            each teorica in uc.horario.teoricas
              li #{teorica}
          form#teoricasForm(action=`/ucs/${uc.sigla}`, method="POST", style="display:none")
            input(type="hidden" name="type" value="teoricas")
            input(type="text" name="class" placeholder="Nova aula teórica")
            button(type="submit") Salvar Teóricas
          .horario-header
            h3 Práticas
            button(type="button", onclick="document.getElementById('praticasForm').style.display='block'") Adicionar Prática
          ul
            each pratica in uc.horario.praticas
              li #{pratica}
          form#praticasForm(action=`/ucs/${uc.sigla}`, method="POST", style="display:none")
            input(type="hidden" name="type" value="praticas")
            input(type="text" name="class" placeholder="Nova aula prática")
            button(type="submit") Salvar Práticas
        .section
          h2 Avaliação e Datas 
          a(href=`/ucs/${uc.sigla}/avaliacoes-e-datas`) Avaliação e Datas
        .section 
          h2 Aulas Práticas
          a(href=`/ucs/${uc.sigla}/praticas`) Aulas Práticas
        .section
          h2 Aulas Teóricas
          a(href=`/ucs/${uc.sigla}/teoricas`) Aulas Teóricas
        a(href='/ucs') Voltar à lista de siglas
